<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lay_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txv_medicine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa leku"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/round_delete_black_24"
            app:layout_constraintBottom_toBottomOf="@id/lay_header"
            app:layout_constraintEnd_toEndOf="@id/lay_header"
            app:layout_constraintTop_toTopOf="@id/lay_header" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/round_edit_black_24"
            app:layout_constraintBottom_toBottomOf="@id/lay_header"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintTop_toTopOf="@id/lay_header" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/lay_header" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <TextView
            android:id="@+id/label_duration_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Czas przyjmowania"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/ver_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lay_header" />

        <TextView
            android:id="@+id/txv_duration_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="typ czasu porzyjmowania"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintEnd_toEndOf="@id/label_duration_type"
            app:layout_constraintStart_toStartOf="@id/label_duration_type"
            app:layout_constraintTop_toBottomOf="@id/label_duration_type" />

        <TextView
            android:id="@+id/txv_duration_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="daty"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintEnd_toEndOf="@id/txv_duration_type"
            app:layout_constraintStart_toStartOf="@id/txv_duration_type"
            app:layout_constraintTop_toBottomOf="@id/txv_duration_type" />

        <TextView
            android:id="@+id/label_days_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Dni przyjmowania"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ver_guideline"
            app:layout_constraintTop_toBottomOf="@id/lay_header" />

        <TextView
            android:id="@+id/txv_days_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="dni przyjmowania"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintEnd_toEndOf="@id/label_days_type"
            app:layout_constraintStart_toStartOf="@id/label_days_type"
            app:layout_constraintTop_toBottomOf="@id/label_days_type" />

        <TextView
            android:id="@+id/label_time_of_taking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Godziny przyjmowania"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/txv_days_type"
            app:layout_constraintTop_toBottomOf="@id/txv_days_type" />

        <TextView
            android:id="@+id/txv_time_of_taking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="godziny przyjmowania"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/label_time_of_taking"
            app:layout_constraintTop_toBottomOf="@id/label_time_of_taking" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
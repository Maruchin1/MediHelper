<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.maruchin.medihelper.presentation.dialogs.SelectProfileDialog" />

        <variable
            name="displayData"
            type="com.maruchin.medihelper.domain.model.ProfileItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_dialog_option_height"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:onClick="@{() -> handler.onClickSelectProfile(displayData.profileId)}"
        android:paddingStart="@dimen/bottom_dialog_option_padding_horizontal"
        android:paddingEnd="@dimen/bottom_dialog_option_padding_horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profile"
            style="@style/Widget.MediHelper.CardView.Profile.Light.Small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@{displayData.color}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:src="@drawable/round_person_24"
                android:tint="@color/colorWhite" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bottom_dialog_option_text_margin_start"
            android:text='@{displayData.name, default="Nazwa profilu"}'
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_profile"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
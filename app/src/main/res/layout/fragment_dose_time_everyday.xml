<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.medihelper.mainapp.schedule.AddToScheduleViewModel" />

        <variable
            name="handler"
            type="com.example.medihelper.mainapp.schedule.dosetimeOptions.DoseTimeEverydayFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:context=".mainapp.schedule.dosetimeOptions.DoseTimeEverydayFragment">

        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_event_white_24"
            android:tint="@android:color/tertiary_text_dark"
            app:layout_constraintBottom_toBottomOf="@id/label_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_start" />

        <TextView
            android:id="@+id/label_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="PoczÄ…tek"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@android:color/tertiary_text_dark"
            app:layout_constraintStart_toEndOf="@id/icon_date"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txv_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{handler::onClickSelectDate}"
            android:text="@{viewModel.startDateLive}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_start"
            app:layout_constraintTop_toTopOf="@id/label_start" />

        <TextView
            android:id="@+id/label_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Koniec"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@android:color/tertiary_text_dark"
            app:layout_constraintStart_toEndOf="@id/icon_date"
            app:layout_constraintTop_toBottomOf="@id/label_start" />

        <TextView
            android:id="@+id/txv_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{handler::onClickSelectDate}"
            android:text="@{viewModel.endDateLive}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/txv_start"
            app:layout_constraintTop_toTopOf="@id/label_end" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
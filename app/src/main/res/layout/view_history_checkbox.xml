<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="displayData"
            type="com.example.medihelper.localdatabase.pojo.MedicinePlanHistoryCheckbox" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{displayData.plannedTime.formatString, default="00:00"}'
            android:textColor="@color/colorWhite"
            app:chipBackgroundColor='@{displayData.statusOfTaking.colorResID, default="@color/colorDarkerGray"}' />

    </LinearLayout>

</layout>
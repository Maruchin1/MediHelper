<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.medihelper.mainapp.medicines.MedicineDetailsViewModel" />

        <variable
            name="handler"
            type="com.example.medihelper.mainapp.medicines.MedicineDetailsFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        tools:context=".mainapp.medicines.MedicineDetailsFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:background="@color/colorBackground"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed"
                app:titleEnabled="false">

                <ImageView
                    android:id="@+id/img_medicine_picture"
                    srcFile="@{viewModel.photoFileLive}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:transitionName="@string/shared_image_photo"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_collapseMode="parallax"
                    app:navigationIcon="@drawable/round_close_24">

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="48dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_pill_white_36dp" />

                            <TextView
                                android:id="@+id/txv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@{viewModel.medicineNameLive, default=Nazwa}"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                                android:textColor="@color/colorWhite" />
                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            style="@style/AppTheme.Widget.CardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="16dp"
                                android:orientation="vertical">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TableRow>

                                        <TextView
                                            android:id="@+id/label_expire_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Lek ważny do:"
                                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle" />

                                        <TextView
                                            android:id="@+id/txv_expire_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:text='@{viewModel.expireDateLive ?? "--", default=data}'
                                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle" />
                                    </TableRow>

                                    <TableRow android:layout_marginTop="8dp">

                                        <TextView
                                            android:id="@+id/label_days_remain"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Pozostało:"
                                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:text='@{viewModel.daysRemainsLive ?? "--", default=dni}'
                                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle" />
                                    </TableRow>
                                </TableLayout>

                                <com.google.android.material.chip.ChipGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    app:chipSpacingHorizontal="8dp"
                                    app:singleLine="true">

                                    <com.google.android.material.chip.Chip
                                        style="@style/AppTheme.Widget.Chip.Action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{() -> handler.onClickTake()}"
                                        android:text="Zażyj"
                                        app:chipIcon="@drawable/pill" />

                                    <com.google.android.material.chip.Chip
                                        style="@style/AppTheme.Widget.Chip.Action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{() -> handler.onClickEdit()}"
                                        android:text="Edytuj"
                                        app:chipIcon="@drawable/round_edit_black_24" />

                                    <com.google.android.material.chip.Chip
                                        style="@style/AppTheme.Widget.Chip.Action"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{() -> handler.onClickDelete()}"
                                        android:text="Usuń"
                                        app:chipIcon="@drawable/round_delete_black_24" />
                                </com.google.android.material.chip.ChipGroup>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txv_curr_state_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.stateTextLive, default=Stan}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                            android:textColor='@{viewModel.stateColorResIdLive, default="@color/colorStateGood"}'
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/lay_curr_state_line"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:visibility="@{viewModel.stateAvailableLive ? View.VISIBLE : View.GONE}">

                            <View
                                android:id="@+id/line_state"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="@{viewModel.stateWeightLive, default=7}"
                                android:background='@{viewModel.stateColorResIdLive, default="@android:color/holo_green_light"}' />

                            <View
                                android:id="@+id/line_empty"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="@{viewModel.emptyWeightLive, default=3}"
                                android:background="@color/colorBackground" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_curr_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:visibility="@{viewModel.stateAvailableLive ? View.VISIBLE : View.GONE}">

                            <TextView
                                android:id="@+id/txv_curr_state_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:text="@{viewModel.stateNumberStringLive, default=stan}"
                                android:textAlignment="viewEnd"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                                android:textColor="@color/colorTextTertiary" />


                            <TextView
                                android:id="@+id/txv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:text="@{viewModel.typeNameLive, default=typ}"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                                android:textColor="@color/colorTextTertiary" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="Osoby przyjmujące lek"
                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_persons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/recycler_item_person_taking_medicine" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_extra_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dodatkowe informacje"
                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle" />

                        <TextView
                            android:id="@+id/txv_extra_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text='@{viewModel.comments ?? "Brak informacji", default="Brak informacji"}'
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            android:textColor="@android:color/tertiary_text_dark" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
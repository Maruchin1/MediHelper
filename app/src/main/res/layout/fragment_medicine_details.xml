<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.medihelper.mainapp.medicine.MedicineDetailsViewModel" />

        <variable
            name="handler"
            type="com.example.medihelper.mainapp.medicine.MedicineDetailsFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        tools:context=".mainapp.medicine.MedicineDetailsFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed"
                app:titleEnabled="false">

                <ImageView
                    android:id="@+id/img_medicine_picture"
                    srcFile="@{viewModel.photoFileLive}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_pill_white_48dp"
                    android:transitionName="@string/shared_image_photo"
                    app:layout_collapseMode="parallax"
                    android:background="@color/colorDarkerGray"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:layout_collapseMode="parallax"
                    app:navigationIcon="@drawable/round_close_24">

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:behavior_overlapTop="54dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/main_card_margin_start"
                    android:layout_marginTop="@dimen/main_card_margin_top"
                    android:layout_marginEnd="@dimen/main_card_margin_end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text='@{viewModel.medicineDetailsLive.medicineName, default="Nazwa leku"}'
                            android:textAppearance="@style/AppTheme.Text.ToolbarTitle.Main"
                            android:textColor="@color/colorTextPrimary" />

                        <TableLayout
                            android:id="@+id/table_medicine_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@id/toolbar">

                            <TableRow android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="jednostka"
                                    android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:text="@{viewModel.medicineDetailsLive.medicineUnit, default=tabletki}"
                                    android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />
                            </TableRow>

                            <TableRow android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ważny do"
                                    android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:text="@{viewModel.medicineDetailsLive.expireDate.formatString, default=data}"
                                    android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />
                            </TableRow>
                        </TableLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="4dp"
                            app:chipSpacingHorizontal="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/table_medicine_details"
                            app:singleLine="true">

                            <com.google.android.material.chip.Chip
                                style="@style/AppTheme.Widget.Chip.Action"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:onClick="@{() -> handler.onClickTake()}"
                                android:text="Przyjmij"
                                app:chipIcon="@drawable/ic_pill_white_36dp" />

                            <com.google.android.material.chip.Chip
                                style="@style/AppTheme.Widget.Chip.Action"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{() -> handler.onClickEdit()}"
                                android:text="Edytuj"
                                android:visibility="@{viewModel.isAppModeConnected() ? View.GONE : View.VISIBLE}"
                                app:chipIcon="@drawable/round_edit_black_24" />

                            <com.google.android.material.chip.Chip
                                style="@style/AppTheme.Widget.Chip.Action"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{() -> handler.onClickDelete()}"
                                android:text="Usuń"
                                android:visibility="@{viewModel.isAppModeConnected() ? View.GONE : View.VISIBLE}"
                                app:chipIcon="@drawable/round_delete_black_24" />
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/main_card_margin_start"
                    android:layout_marginTop="@dimen/main_card_margin_top"
                    android:layout_marginEnd="@dimen/main_card_margin_end"
                    android:visibility="@{viewModel.medicineStateDataLive.stateAvailable ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txv_curr_state_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.medicineStateDataLive.text, default=Stan}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                            android:textColor='@{viewModel.medicineStateDataLive.colorId, default="@color/colorStateGood"}'
                            android:textSize="16sp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:id="@+id/lay_curr_state_line"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <View
                                    android:id="@+id/line_state"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="@{viewModel.medicineStateDataLive.stateWeight, default=7}"
                                    android:background='@{viewModel.medicineStateDataLive.colorId, default="@android:color/holo_green_light"}' />

                                <View
                                    android:id="@+id/line_empty"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="@{viewModel.medicineStateDataLive.emptyWeight, default=3}"
                                    android:background="@color/colorBackground" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:id="@+id/lay_curr_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txv_curr_state_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:text="@{viewModel.medicineStateDataLive.numberText, default=stan}"
                                android:textAlignment="viewEnd"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                android:textColor="@color/colorTextTertiary" />


                            <TextView
                                android:id="@+id/txv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:text="@{viewModel.medicineDetailsLive.medicineUnit, default=typ}"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                android:textColor="@color/colorTextTertiary" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/main_card_margin_start"
                    android:layout_marginTop="@dimen/main_card_margin_top"
                    android:layout_marginEnd="@dimen/main_card_margin_end"
                    android:visibility="@{viewModel.isAppModeConnected() ? View.GONE : View.VISIBLE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="Osoby przyjmujące lek"
                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle"
                            android:textColor='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_persons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:visibility="@{viewModel.personItemListTakingMedicineAvailableLive ? View.VISIBLE : View.GONE}"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/recycler_item_person_taking_medicine" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="Lek nie jest przyjmowany przez żadną osobę"
                                android:textAppearance="@style/MedicineDetailFragment.Text.Body2"
                                android:visibility="@{viewModel.personItemListTakingMedicineAvailableLive ? View.GONE : View.VISIBLE, default=gone}" />
                        </FrameLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/main_card_margin_start"
                    android:layout_marginTop="@dimen/main_card_margin_top"
                    android:layout_marginEnd="@dimen/main_card_margin_end"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_extra_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dodatkowe informacje"
                            android:textAppearance="@style/MedicineDetailFragment.Text.Subtitle"
                            android:textColor='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/txv_extra_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text='@{viewModel.medicineDetailsLive.additionalInfo, default=informacje}'
                                android:textAppearance="@style/MedicineDetailFragment.Text.Body1"
                                android:visibility="@{viewModel.additionalInfoAvailableLive ? View.VISIBLE : View.GONE}" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Brak dodatkowych informacji"
                                android:textAppearance="@style/MedicineDetailFragment.Text.Body2"
                                android:visibility="@{viewModel.additionalInfoAvailableLive ? View.GONE : View.VISIBLE, default=gone}" />
                        </FrameLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
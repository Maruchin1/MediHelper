<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.example.medihelper.AppDateTime" />

        <variable
            name="handler"
            type="com.example.medihelper.mainapp.schedule.ScheduleDayFragment" />

        <variable
            name="displayData"
            type="com.example.medihelper.localdatabase.pojos.PlannedMedicineItem" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> handler.onClickOpenPlannedMedicineOptions(displayData.plannedMedicineID)}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkerGray"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                app:backgroundResource="@{displayData.statusOfTaking.colorResID}"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txv_scheduled_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{AppDateTime.timeToString(displayData.plannedTime), default="00:00"}'
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txv_schedule_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{displayData.statusOfTaking.shortString, default="status"}'
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txv_medicine_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='@{displayData.medicineName, default="Nazwa leku"}'
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ver_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lay_header" />

            <TextView
                android:id="@+id/txv_scheduled_dose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='@{"Dawka: " + displayData.plannedDoseSize + " " + displayData.medicineUnit, default="Dawka do przyjÄ™cia"}'
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textColor="@color/colorTextTertiary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ver_guideline"
                app:layout_constraintTop_toBottomOf="@id/lay_header" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:alpha="0.12"
                android:background="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/ver_guideline"
                app:layout_constraintStart_toStartOf="@id/ver_guideline"
                app:layout_constraintTop_toBottomOf="@id/lay_header" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>


<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.maruchin.medihelper.presentation.feature.plans.AddEditMedicinePlanViewModel" />

        <variable
            name="handler"
            type="com.maruchin.medihelper.presentation.feature.plans.AddEditMedicinePlanFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        tools:context=".presentation.feature.plans.AddEditMedicinePlanFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{viewModel.colorPrimaryId}">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:titleEnabled="false">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?actionBarSize">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:onClick="@{() -> handler.onClickSelectPerson()}"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:layout_collapseMode="none">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorTransparent"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/colorWhite"
                            app:strokeWidth="3dp">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_margin="8dp"
                                android:src="@drawable/round_person_24"
                                android:tint="@color/colorWhite" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text='@{viewModel.selectedPersonName, default="Nazwa osoby"}'
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                </FrameLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@{viewModel.colorPrimaryId}"
                    android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/toolbar_menu_add_edit"
                    app:navigationIcon="@drawable/round_close_24"
                    app:title='@{viewModel.formTitle, default="Zaplanuj lek"}' />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_card_margin_start"
                    android:layout_marginTop="@dimen/form_card_margin_top"
                    android:layout_marginEnd="@dimen/form_card_margin_end"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{() -> handler.onClickSelectMedicine()}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/pill"
                                android:tint='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Lek do zaplanowania"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                                android:textColor='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Wybierz z apteczki"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:textColor="@color/colorTextTertiary"
                                android:visibility="@{viewModel.selectedMedicineAvailable ? View.GONE : View.VISIBLE, default=gone}" />

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="@{viewModel.selectedMedicineAvailable ? View.VISIBLE : View.GONE, default=visible}">

                                <TableRow android:layout_marginTop="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Nazwa leku"
                                        android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:text='@{viewModel.selectedMedicineShortInfo.name, default="nazwa"}'
                                        android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />
                                </TableRow>

                                <TableRow android:layout_marginTop="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jednostka"
                                        android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:text='@{viewModel.selectedMedicineShortInfo.unit, default="jednostka"}'
                                        android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />
                                </TableRow>

                                <TableRow android:layout_marginTop="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ważny do"
                                        android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:text='@{viewModel.selectedMedicineShortInfo.expireDate.formatString, default="data"}'
                                        android:textAppearance="@style/MedicineDetailFragment.Text.Body2" />
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_card_margin_start"
                    android:layout_marginTop="@dimen/form_card_margin_top"
                    android:layout_marginEnd="@dimen/form_card_margin_end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/round_event_24"
                                android:tint='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />

                            <TextView
                                android:id="@+id/txv_title_schedule_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Czas trwania"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                                android:textColor='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chip_group_duration_type"
                                style="@style/Widget.MaterialComponents.ChipGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                app:chipSpacingHorizontal="16dp"
                                app:layout_constraintTop_toBottomOf="@id/txv_title_schedule_type"
                                app:singleSelection="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_once"
                                    style="@style/AppTheme.Widget.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jednorazowo" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_period"
                                    style="@style/AppTheme.Widget.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Liczba dni" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_continuous"
                                    style="@style/AppTheme.Widget.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Przyjmowanie ciągłe" />
                            </com.google.android.material.chip.ChipGroup>

                            <FrameLayout
                                android:id="@+id/frame_schedule_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/chip_group_duration_type" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_schedule_days_type"
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_card_margin_start"
                    android:layout_marginTop="@dimen/form_card_margin_top"
                    android:layout_marginEnd="@dimen/form_card_margin_end"
                    android:visibility="@{viewModel.daysType == null ? View.GONE : View.VISIBLE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/round_event_24"
                                android:tint='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Dni przyjmowania"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                                android:textColor='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chip_group_days_type"
                                style="@style/Widget.MaterialComponents.ChipGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                app:chipSpacingHorizontal="16dp"
                                app:singleSelection="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_everyday"
                                    style="@style/AppTheme.Widget.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Każdego dnia" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_days_of_week"
                                    style="@style/AppTheme.Widget.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wybrane dni tygodnia" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_interval_of_days"
                                    style="@style/AppTheme.Widget.Chip.Choice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Odstęp w dniach" />

                            </com.google.android.material.chip.ChipGroup>

                            <FrameLayout
                                android:id="@+id/frame_schedule_days"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_card_margin_start"
                    android:layout_marginTop="@dimen/form_card_margin_top"
                    android:layout_marginEnd="@dimen/form_card_margin_end"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/round_access_time_24"
                                android:tint='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Godziny przyjmowania"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                                android:textColor='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_time_of_taking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/recycler_item_time_of_taking" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:onClick="@{() -> viewModel.addTimeOfTaking()}"
                                android:src="@drawable/round_add_white_36"
                                android:tint='@{viewModel.colorPrimaryId, default="@color/colorPrimary"}' />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
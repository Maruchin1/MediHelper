<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.medihelper.localdatabase.entities.MedicinePlanEntity.DaysType" />

        <import type="android.view.View" />

        <import type="com.example.medihelper.AppDateTime" />

        <variable
            name="viewModel"
            type="com.example.medihelper.mainapp.addmedicineplan.AddMedicinePlanViewModel" />

        <variable
            name="handler"
            type="com.example.medihelper.mainapp.addmedicineplan.AddMedicinePlanFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        tools:context=".mainapp.addmedicineplan.AddMedicinePlanFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{viewModel.colorPrimaryLive}">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed"
                app:titleEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                        app:menu="@menu/toolbar_menu_add_edit"
                        app:title="Zaplanuj lek"
                        app:navigationIcon="@drawable/round_close_24"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:onClick="@{() -> handler.onClickSelectPerson()}"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorTransparent"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            app:layout_anchor="@id/card_person_data"
                            app:layout_anchorGravity="top|center_horizontal"
                            app:strokeColor="@color/colorWhite"
                            app:strokeWidth="3dp">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_margin="8dp"
                                android:src="@drawable/round_person_24"
                                android:tint="@color/colorWhite" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text='@{viewModel.selectedPersonItemLive.personName, default="Nazwa osoby"}'
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="80dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{() -> handler.onClickSelectMedicine()}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_pill_grey600_36dp"
                                android:tint='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text='@{viewModel.selectedMedicineName ?? "Nie wybrano leku", default="Nazwa leku"}'
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                android:textColor='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text='@{"Aktualny stan: " + viewModel.selectedMedicineCurrState ?? "--", default="Aktualny stan"}'
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                            android:textColor="@color/colorTextSecondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text='@{"Lek ważny do: " + viewModel.selectedMedicineExpireDate ?? "--", default="Data ważności"}'
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                            android:textColor="@color/colorTextSecondary" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txv_title_schedule_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Czas przyjmowania"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                            android:textColor='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_schedule_type"
                            style="@style/Widget.MaterialComponents.ChipGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:chipSpacingHorizontal="16dp"
                            app:layout_constraintTop_toBottomOf="@id/txv_title_schedule_type"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_once"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jednorazowo"
                                android:textColor="@color/chip_single_select_text_color"
                                app:chipBackgroundColor="@color/chip_single_select_bg"
                                app:chipStrokeColor="@android:color/darker_gray"
                                app:chipStrokeWidth="2dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_period"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Liczba dni"
                                android:textColor="@color/chip_single_select_text_color"
                                app:chipBackgroundColor="@color/chip_single_select_bg"
                                app:chipStrokeColor="@android:color/darker_gray"
                                app:chipStrokeWidth="2dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_continuous"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Przyjmowanie ciągłe"
                                android:textColor="@color/chip_single_select_text_color"
                                app:chipBackgroundColor="@color/chip_single_select_bg"
                                app:chipStrokeColor="@android:color/darker_gray"
                                app:chipStrokeWidth="2dp" />
                        </com.google.android.material.chip.ChipGroup>

                        <FrameLayout
                            android:id="@+id/frame_schedule_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/chip_group_schedule_type" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_schedule_days_type"
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:visibility="@{viewModel.daysTypeLive == DaysType.NONE ? View.GONE : View.VISIBLE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dni przyjmowania"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                            android:textColor='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_schedule_days"
                            style="@style/Widget.MaterialComponents.ChipGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:chipSpacingHorizontal="16dp"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_everyday"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Każdego dnia"
                                android:textColor="@color/chip_single_select_text_color"
                                app:chipBackgroundColor="@color/chip_single_select_bg"
                                app:chipStrokeColor="@android:color/darker_gray"
                                app:chipStrokeWidth="2dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_days_of_week"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wybrane dni tygodnia"
                                android:textColor="@color/chip_single_select_text_color"
                                app:chipBackgroundColor="@color/chip_single_select_bg"
                                app:chipStrokeColor="@android:color/darker_gray"
                                app:chipStrokeWidth="2dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_interval_of_days"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Odstęp w dniach"
                                android:textColor="@color/chip_single_select_text_color"
                                app:chipBackgroundColor="@color/chip_single_select_bg"
                                app:chipStrokeColor="@android:color/darker_gray"
                                app:chipStrokeWidth="2dp" />

                        </com.google.android.material.chip.ChipGroup>

                        <FrameLayout
                            android:id="@+id/frame_schedule_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppTheme.Widget.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="128dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Godziny przyjmowania"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                            android:textColor='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_schedule_hours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:onClick="@{() -> viewModel.addDoseHour()}"
                            android:src="@drawable/round_add_white_36"
                            android:tint='@{viewModel.colorPrimaryLive, default="@color/colorPrimary"}' />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
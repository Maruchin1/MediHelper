<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.example.medihelper.mainapp.persons.AddEditPersonFragment" />

        <variable
            name="viewModel"
            type="com.example.medihelper.mainapp.persons.AddEditPersonViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background='@{viewModel.personColorResIDLive, default="@color/colorPrimary"}'
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/toolbar_menu_add_edit"
                app:navigationIcon="@drawable/round_close_24"
                app:title='@{viewModel.titleLive, default="Dodaj osobÄ™"}' />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorTransparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/card_person_data"
                app:layout_constraintEnd_toEndOf="@id/card_person_data"
                app:layout_constraintStart_toStartOf="@id/card_person_data"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:strokeColor="@color/colorWhite"
                app:strokeWidth="3dp"
                app:layout_constraintVertical_bias="0.6">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/round_person_24"
                    android:tint="@color/colorWhite" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_person_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_main_big_margin_hor"
                android:layout_marginEnd="@dimen/card_main_big_margin_hor"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nazwa"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:textColor='@{viewModel.personColorResIDLive, default="@color/colorPrimary"}' />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/in_lay_person_name"
                        style="@style/Widget.Design.TextInputLayout"
                        inLayError="@{viewModel.errorPersonNameLive}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={viewModel.personNameLive}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Kolor profilu"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:textColor='@{viewModel.personColorResIDLive, default="@color/colorPrimary"}' />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="3"
                        tools:listitem="@layout/recycler_item_person_color" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
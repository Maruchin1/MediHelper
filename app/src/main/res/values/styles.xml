<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorError">@color/colorStateMedium</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="bottomSheetDialogTheme">@style/Theme.MediHelper.BottomDialog</item>
    </style>

    <!--    Theme-->
    <style name="Theme.MediHelper.SideSheet" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="Theme.MediHelper.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.MediHelper.BottomDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/Theme.MediHelper.BottomSheet</item>
    </style>

    <style name="Theme.MediHelper.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="Theme.MediHelper.CalendarView" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/colorDarkerGray</item>
    </style>

    <style name="Theme.Medihelper.CalendarView.Dark" parent="Theme.MediHelper.CalendarView">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="ThemeOverlay.MediHelper.Appbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="ThemeOverlay.MediHelper.Appbar.Light" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <!--    Widget-->
    <style name="Widget.MediHelper.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
    </style>

    <style name="Widget.MediHelper.TextInputLayout.Menu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
    </style>

    <style name="Widget.MediHelper.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.MediHelper.CardView.Outline" parent="Widget.MediHelper.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorDarkerGray</item>
        <item name="cardBackgroundColor">@color/colorTransparent</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.MediHelper.CardView.Profile" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardBackgroundColor">@color/colorTransparent</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.MediHelper.CardView.Profile.Light.Small" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.MediHelper.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.MediHelper.Button.Big" parent="Widget.MediHelper.Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="cornerRadius">26dp</item>
    </style>

    <style name="Widget.MediHelper.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/colorDarkerGray</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.MediHelper.Button.Outlined.Dark" parent="Widget.MediHelper.Button.Outlined">
        <item name="strokeColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="iconTint">@color/colorWhite</item>
    </style>

    <style name="Widget.MediHelper.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">20dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.MediHelper.ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/colorWhite</item>
    </style>

    <style name="Widget.MediHelper.ExtendedFab.Dark" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="iconTint">@color/colorBlack</item>
    </style>

    <style name="Widget.MediHelper.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_single_select_text_color</item>
        <item name="chipBackgroundColor">@color/chip_single_select_bg</item>
        <item name="chipStrokeColor">@color/colorDarkerGray</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/colorDarkerGray</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Widget.MediHelper.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_single_select_text_color</item>
        <item name="chipBackgroundColor">@color/chip_single_select_bg</item>
        <item name="chipStrokeColor">@color/colorDarkerGray</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/colorDarkerGray</item>
    </style>

    <style name="Widget.MediHelper.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipSurfaceColor">@color/colorTransparent</item>
        <item name="chipBackgroundColor">@color/colorTransparent</item>
        <item name="chipIconTint">@color/colorWhite</item>
        <item name="chipStrokeColor">@color/colorWhite</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="iconStartPadding">4dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="rippleColor">@color/colorWhite</item>
    </style>

    <style name="Widget.MediHelper.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textAppearance">@style/TextAppearance.MediHelper.Subtitle1</item>
    </style>

    <!--    TextAppearance-->
    <style name="TextAppearance.MediHelper.AppbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.MediHelper.AppbarTitle.Big" parent="TextAppearance.MediHelper.AppbarTitle">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.MediHelper.AppbarTitle.Light" parent="TextAppearance.MediHelper.AppbarTitle">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.MediHelper.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.MediHelper.HeaderBig" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.MediHelper.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.MediHelper.Subtitle1.Dark" parent="TextAppearance.MediHelper.Subtitle1">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.MediHelper.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.MediHelper.Subtitle2.Secondary" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearance.MediHelper.BodyBig1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.MediHelper.BodyBig2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.MediHelper.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearance.MediHelper.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearance.MediHelper.Body2.Tertiary" parent="TextAppearance.MediHelper.Body2">
        <item name="android:textColor">@color/colorTextTertiary</item>
    </style>

    <style name="TextAppearance.MediHelper.NoItemPageTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorDarkerGray</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/scheduleFragment">

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.medihelper.mainapp.schedule.ScheduleFragment"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/toMedicinePlanListHostFragment"
            app:destination="@id/medicinePlanListHostFragment"
            app:enterAnim="@anim/slide_in_end"
            app:exitAnim="@anim/slide_out_start"
            app:popEnterAnim="@anim/slide_in_start"
            app:popExitAnim="@anim/slide_out_end" />
        <action
            android:id="@+id/toPersonDialog"
            app:destination="@id/personDialog" />
        <action
            android:id="@+id/toAddMedicinePlanActivity"
            app:destination="@id/addMedicinePlanActivity" />
    </fragment>
    <fragment
        android:id="@+id/kitFragment"
        android:name="com.example.medihelper.mainapp.medickit.KitFragment"
        tools:layout="@layout/fragment_kit" />
    <fragment
        android:id="@+id/medicinePlanListHostFragment"
        android:name="com.example.medihelper.mainapp.schedule.MedicinePlanListHostFragment"
        tools:layout="@layout/fragment_medicine_plan_list_host">
        <action
            android:id="@+id/toPersonDialog"
            app:destination="@id/personDialog" />
        <action
            android:id="@+id/toAddMedicinePlanActivity"
            app:destination="@id/addMedicinePlanActivity" />
    </fragment>
    <dialog
        android:id="@+id/personDialog"
        android:name="com.example.medihelper.mainapp.family.PersonDialog"
        tools:layout="@layout/dialog_person">
        <action
            android:id="@+id/toAddPersonActivity"
            app:destination="@id/addPersonActivity" />
    </dialog>
    <activity
        android:id="@+id/addPersonActivity"
        android:name="com.example.medihelper.mainapp.family.AddPersonActivity"
        tools:layout="@layout/activity_add_person" >
        <argument
            android:name="editPersonID"
            app:argType="integer"
            android:defaultValue="-1" />
    </activity>
    <activity
        android:id="@+id/addMedicinePlanActivity"
        android:name="com.example.medihelper.mainapp.schedule.addmedicineplan.AddMedicinePlanActivity"
        tools:layout="@layout/activity_add_medicine_plan" />
</navigation>
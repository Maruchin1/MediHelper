<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/scheduleFragment">

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.medihelper.mainapp.schedule.ScheduleFragment"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/toMedicinePlanListHostFragment"
            app:destination="@id/medicinePlanListHostFragment"
            app:enterAnim="@anim/slide_in_end"
            app:exitAnim="@anim/slide_out_start"
            app:popEnterAnim="@anim/slide_in_start"
            app:popExitAnim="@anim/slide_out_end" />
        <action
            android:id="@+id/toPersonDialog"
            app:destination="@id/personDialog" />
        <action
            android:id="@+id/toAddMedicinePlanFragment"
            app:destination="@id/addMedicinePlanFragment" />
        <action
            android:id="@+id/toPlannedMedicineOptionsDialog"
            app:destination="@id/plannedMedicineOptionsDialog" />
    </fragment>
    <fragment
        android:id="@+id/medicinesFragment"
        android:name="com.example.medihelper.mainapp.medicines.MedicinesFragment"
        tools:layout="@layout/fragment_medicines">
        <action
            android:id="@+id/toAddMedicineFragment"
            app:destination="@id/addMedicineFragment" />
        <action
            android:id="@+id/toMedicineDetailsFragment"
            app:destination="@id/medicineDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/medicinePlanListHostFragment"
        android:name="com.example.medihelper.mainapp.schedule.MedicinePlanListHostFragment"
        tools:layout="@layout/fragment_medicine_plan_list_host">
        <action
            android:id="@+id/toPersonDialog"
            app:destination="@id/personDialog" />
        <action
            android:id="@+id/toAddMedicinePlanFragment"
            app:destination="@id/addMedicinePlanFragment" />
    </fragment>
    <dialog
        android:id="@+id/personDialog"
        android:name="com.example.medihelper.mainapp.family.PersonDialog"
        tools:layout="@layout/dialog_person">
        <action
            android:id="@+id/toAddPersonFragment"
            app:destination="@id/addPersonFragment" />
    </dialog>
    <dialog
        android:id="@+id/addPersonFragment"
        android:name="com.example.medihelper.mainapp.family.AddEditPersonFragment"
        tools:layout="@layout/fragment_add_edit_person">
        <argument
            android:name="editPersonID"
            android:defaultValue="-1"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/addMedicinePlanFragment"
        android:name="com.example.medihelper.mainapp.addmedicineplan.AddMedicinePlanFragment"
        tools:layout="@layout/fragment_add_medicine_plan">
        <action
            android:id="@+id/toPersonDialog"
            app:destination="@id/personDialog" />
        <action
            android:id="@+id/toSelectMedicineDialog"
            app:destination="@id/selectMedicineDialog" />
    </dialog>
    <dialog
        android:id="@+id/selectMedicineDialog"
        android:name="com.example.medihelper.mainapp.addmedicineplan.SelectMedicineDialog"
        tools:layout="@layout/dialog_select_medicine">
        <action
            android:id="@+id/toAddMedicineFragment"
            app:destination="@id/addMedicineFragment" />
    </dialog>
    <dialog
        android:id="@+id/addMedicineFragment"
        android:name="com.example.medihelper.mainapp.addmedicine.AddMedicineFragment"
        tools:layout="@layout/fragment_add_medicine" >
        <argument
            android:name="editMedicineID"
            app:argType="integer"
            android:defaultValue="-1" />
    </dialog>
    <dialog
        android:id="@+id/medicineDetailsFragment"
        android:name="com.example.medihelper.mainapp.medicines.MedicineDetailsFragment"
        tools:layout="@layout/fragment_medicine_details">
        <argument
            android:name="medicineID"
            app:argType="integer" />
        <action
            android:id="@+id/toAddMedicineFragment"
            app:destination="@id/addMedicineFragment" />
    </dialog>
    <dialog
        android:id="@+id/plannedMedicineOptionsDialog"
        android:name="com.example.medihelper.mainapp.schedule.PlannedMedicineOptionsDialog"
        tools:layout="@layout/dialog_planned_medicine_options">
        <argument
            android:name="plannedMedicineID"
            app:argType="integer" />
    </dialog>
</navigation>